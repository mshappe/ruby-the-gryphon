doctype html
html lang='en'
  head
    title RubyTheGryphon
    meta name="viewport" content="width=device-width, initial-scale=1"
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
  body
    .container
      .row
        #header.jumbotron
          .center-block style='width:440px'
            img= link_to image_tag('Poster.gif'), root_url

      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed data-toggle='collapse' type='button' data-target='#main-nav' aria-expanded='false'
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          .collapse.navbar-collapse#main-nav
            ul.nav.navbar-nav
              =active_link_to 'Home', root_url, wrap_tag: :li, data: { no_turbolink: true }, active: :exclusive
              =active_link_to 'Calendar', events_path, wrap_tag: :li
              =active_link_to 'Officers', officers_path, wrap_tag: :li
              =active_link_to 'Awards and Honors', awards_path, wrap_tag: :li
              =active_link_to 'Dashboard', dashboard_path(user_id: current_user), wrap_tag: :li if current_user
              =active_link_to 'Management', manage_url, wrap_tag: :li, target: 'rtg_management', data: { no_turbolink: true } if current_user && current_user.has_role?(:admin)
      .row
        .col-md-12
          = render 'alert', type: 'success', text: notice if notice
          = render 'alert', type: 'danger', text: alert if alert

      .row
        #side-navigation.col-lg-3.col-md-3.col-sm-5.col-xs-12
          = render 'users/sessions/new' unless user_signed_in?
          = render 'users/sessions/logged_in' if user_signed_in?
          = render 'application/event_officer_menu' if can? :manage, Event
          = yield :sidebar
        #main.col-lg-9.col-md-9.col-sm-7.col-xs-12
          = content_for?(:main) ? yield(:main) : yield

      .row
        #footer
          .col-md-12
            .center-block style='width: 440px; text-align: center'
              .text-muted #{link_to 'Code', 'http://github.com/mshappe/ruby-the-gryphon'} Copyright Â© 2015 Society for Creative Anachronism, Inc.
              .text-muted Licensed under the #{link_to 'MIT License', 'http://github.com/mshappe/ruby-the-gryphon/LICENSE'}.
              .text-muted This site is NOT currently an official offering of the Society for Creative Anachronism, Inc. This is an experimental site.
              .text-muted #{link_to "Version #{version_number}: #{version_name}", release_notes_path}
