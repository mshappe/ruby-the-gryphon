.panel.panel-primary
  .panel-heading
    .row
      .col-md-4.col-sm-6.col-xs-12
        .panel-title
          = params[:include] == 'past' ? "All" : "Upcoming"
          |  Events
      .col-md-4.col-sm-12
        = search_form_for @q, url: events_path do |f|
          = f.search_field :name_cont, placeholder: 'Name contains'
      .col-md-4.col-sm-6
        .text-right
          .panel-title
            = link_to 'See past events', events_path(include: 'past') unless params[:include] == 'past'
            = link_to 'Only future events', events_path if params[:include] == 'past'

  .panel-body
    = render 'events/events', events: @events
