.panel.panel-danger
  .panel-heading
    .panel-title= report.title
  .panel-body
    = simple_form_for report, url: path, wrapper: :horizontal_form, html: { class: 'form-horizontal' } do |f|
      .form-group
        .col-md-12
          =f.input :title
          =f.association :report_type
          =f.association :persona
          =f.association :warrant_type
          =f.input :url, as: :url
          =f.input :approved, as: :datetime_picker
          =f.input :body, input_html: { rows: 10 }
      .form-group
        .col-md-12
          =f.button :submit
          =link_to 'Cancel', URI(request.referrer || '').path, class: 'btn btn-info'

coffee:
  $('#report_post_type_id').selectize()
  $('#report_persona_id').selectize()
  $('#report_warrant_type_id').selectize()
